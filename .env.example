# 数据库配置
DATABASE_URL="postgresql://user:password@localhost:5432/price_comparison?schema=public"

# JWT配置
JWT_SECRET="your-jwt-secret"
JWT_EXPIRES_IN="7d"

# 邮件服务配置
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="your-email@example.com"
SMTP_PASS="your-email-password"
SMTP_FROM="Price Comparison <noreply@example.com>"

# Redis配置（用于缓存和会话）
REDIS_URL="redis://localhost:6379"

# 第三方API密钥
OPENAI_API_KEY="your-openai-api-key"
SERPAPI_API_KEY="your-serpapi-api-key"

# 应用配置
NODE_ENV="development"
PORT="3000"
API_URL="http://localhost:3000/api"
WEBSITE_URL="http://localhost:3000"

# 文件上传配置
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="5242880" # 5MB

# 爬虫配置
CRAWLER_INTERVAL="3600" # 1小时
CRAWLER_TIMEOUT="30000" # 30秒
MAX_CONCURRENT_CRAWLS="5"

# 安全配置
CORS_ORIGINS="http://localhost:3000"
RATE_LIMIT_WINDOW="900000" # 15分钟
RATE_LIMIT_MAX="100" # 请求次数限制

# 缓存配置
CACHE_TTL="3600" # 1小时